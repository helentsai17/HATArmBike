<Page x:ConnectionId='1'
    x:Class="HATarmBike.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HATarmBike"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <CollectionViewSource x:ConnectionId='2' x:Name="DeviceListSource"/>
        
        <DataTemplate x:Key="ResultsListViewTemplate"                                            >
            <Grid x:ConnectionId='4' Margin="5">
                <StackPanel Grid.Column="1" Margin="5">
                    <TextBlock TextWrapping="WrapWholeWords">
                       <Run x:ConnectionId='5'                                   FontWeight="Bold"/>  Is Paired: <Run x:ConnectionId='6'                                      />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>
        
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="2,2,2,0">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Orientation="Vertical"   Height="auto">
                <ListBox x:ConnectionId='18' x:Name="ConnectDevices" ScrollViewer.HorizontalScrollMode="Enabled" ScrollViewer.HorizontalScrollBarVisibility="Visible" ItemsSource="{Binding Source={StaticResource DeviceListSource}}" HorizontalAlignment="Stretch" Height="40" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Id}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBox x:ConnectionId='19'
                    x:Name="status" Text="status" TextWrapping="Wrap" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderBrush="White"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Orientation="Horizontal"  Height="84" >
                <Button x:ConnectionId='16' Name="comPortInput" Content="Connect"                           />
                <Button x:ConnectionId='17' Name="closeDevice" Content="Disconnect"                          />
            </StackPanel>

            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,0,0,0"  Height="80">
                <TextBlock x:ConnectionId='14' Name="rcvdText" HorizontalAlignment="Stretch" Height="40"/>
                <TextBlock x:ConnectionId='15' Name="rpmText" HorizontalAlignment="Stretch" Height="40"/>
            </StackPanel>

        </StackPanel>


        <StackPanel Grid.Column="1">
            <ScrollViewer VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto"  Height="40" Grid.Row="1" Margin="0,0,0,0"
                      BorderThickness="1">
                <ListView x:ConnectionId='13' x:Name="ResultsListView"
                      ItemTemplate="{StaticResource ResultsListViewTemplate}"
                                                                      />
            </ScrollViewer>
            <TextBlock x:ConnectionId='7' x:Name="BLEstatus"/>
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Orientation="Horizontal" Height="84">
                <Button x:ConnectionId='11' x:Name="PairButton" Content="Pair"                                   Margin="0,0,0,0" />
                <Button x:ConnectionId='12' x:Name="ConnectButton" Content="Connect"                                      Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel>
                <TextBlock x:ConnectionId='8' Name="spO2Display" HorizontalAlignment="Stretch" Height="40"/>
                <TextBlock x:ConnectionId='9' Name="BatteryLevelData" HorizontalAlignment="Stretch" Height="40"/>
                <TextBlock x:ConnectionId='10' Name="HeartReteDataDisply" HorizontalAlignment="Stretch" Height="40"/>
            </StackPanel>

        </StackPanel>


    </Grid>
</Page>

